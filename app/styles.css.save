cat>app/styles.css <<'EOF'

:root {
    --bg: #050814;
    --blueGlow: radial-gradient(circle at top, #0e3cff, #050b24);
    --glass: rgba(255, 255, 255, .08);
    --glass2: rgba(255, 255, 255, .05);
    --border: rgba(255, 255, 255, .14);
    --muted: #b7c2e0;
    --text: #ffffff;
    --gold: rgba(255, 215, 0, .9);
    --shadow: 0 20px 80px rgba(0, 0, 0, .45);
}

* {
    box-sizing: border-box;
    font-family: 'Tajawal', sans-serif
}

body {
    margin: 0;
    background: var(--bg);
    color: var(--text)
}

/* ===== TOPBAR ===== */
.topbar {
    position: sticky;
    top: 0;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px 22px;
    background: rgba(5, 8, 20, .55);
    border-bottom: 1px solid rgba(255, 255, 255, .08);
    backdrop-filter: blur(18px);
}

.homebar {
    position: fixed;
    left: 0;
    right: 0
}

.brand {
    display: flex;
    gap: 12px;
    align-items: center
}

.brand-mark {
    width: 34px;
    height: 34px;
    border-radius: 10px;
    background: linear-gradient(180deg, rgba(255, 255, 255, .22), rgba(255, 255, 255, .06));
    border: 1px solid rgba(255, 255, 255, .12);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 10px 30px rgba(0, 0, 0, .25);
}

.brand-title {
    font-weight: 800;
    letter-spacing: .3px
}

.brand-sub {
    color: var(--muted);
    font-size: .9rem;
    margin-top: 2px
}

.topnav {
    display: flex;
    gap: 14px;
    align-items: center
}

.toplink {
    color: rgba(255, 255, 255, .88);
    text-decoration: none;
    padding: 10px 12px;
    border-radius: 10px;
    border: 1px solid transparent;
}

.toplink:hover {
    background: rgba(255, 255, 255, .06);
    border-color: rgba(255, 255, 255, .08)
}

.toplink.active {
    background: rgba(255, 255, 255, .08);
    border-color: rgba(255, 255, 255, .12)
}

/* ===== HERO ===== */
.hero {
    position: relative;
    height: 78vh;
    background: var(--blueGlow);
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding-top: 72px;
}

.hero-overlay {
    position: absolute;
    inset: 0;
    backdrop-filter: blur(40px)
}

.hero-content {
    position: relative;
    max-width: 980px;
    padding: 38px 26px
}

.hero h1 {
    font-size: 4.1rem;
    margin: 0 0 10px
}

.hero-sub {
    font-size: 1.25rem;
    color: var(--muted);
    line-height: 1.9;
    margin: 0 auto;
    max-width: 820px
}

.hero-actions {
    margin-top: 34px;
    display: flex;
    gap: 12px;
    justify-content: center;
    flex-wrap: wrap
}

.hero-actions button {
    padding: 14px 26px;
    border-radius: 14px;
    border: none;
    font-size: 1rem;
    cursor: pointer;
    box-shadow: 0 16px 40px rgba(0, 0, 0, .25);
}

.primary {
    background: white;
    color: black
}

.secondary {
    background: transparent;
    color: white;
    border: 1px solid rgba(255, 255, 255, .22);
}

.pill {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 16px;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, .18);
    background: rgba(255, 255, 255, .06);
    color: white;
    text-decoration: none
}

.pill:hover {
    background: rgba(255, 255, 255, .09)
}

.hero-note {
    margin-top: 18px;
    display: flex;
    gap: 10px;
    justify-content: center;
    align-items: center;
    color: rgba(255, 255, 255, .78);
    font-size: .95rem
}

.dot {
    width: 8px;
    height: 8px;
    border-radius: 999px;
    background: var(--gold);
    box-shadow: 0 0 18px rgba(255, 215, 0, .5)
}

/* ===== KPIs ===== */
.kpis {
    display: flex;
    justify-content: center;
    gap: 86px;
    padding: 70px 34px 40px;
}

.kpi {
    text-align: center
}

.kpi-number {
    font-size: 3rem;
    font-weight: 900;
    display: block
}

.kpi-label {
    color: var(--muted);
    margin-top: 10px
}

/* ===== PATHS ===== */
.paths {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 26px;
    padding: 18px 50px 70px;
}

.path-card {
    background: var(--glass);
    border: 1px solid var(--border);
    border-radius: 22px;
    padding: 34px;
    backdrop-filter: blur(22px);
    box-shadow: var(--shadow);
}

.path-card.admin {
    border-color: rgba(255, 215, 0, .35)
}

.path-card h3 {
    margin: 0 0 12px;
    font-size: 1.25rem
}

.path-card p {
    margin: 0;
    color: var(--muted);
    line-height: 1.9
}

.path-card button {
    margin-top: 24px;
    background: rgba(255, 255, 255, .06);
    border: 1px solid rgba(255, 255, 255, .18);
    color: white;
    padding: 12px;
    width: 100%;
    border-radius: 14px;
    cursor: pointer;
}

.path-card button:hover {
    background: rgba(255, 255, 255, .09)
}

/* ===== POLICIES PAGE ===== */
.page {
    padding-top: 0
}

.container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 26px 18px 70px
}

.panel {
    background: var(--glass2);
    border: 1px solid rgba(255, 255, 255, .12);
    border-radius: 22px;
    padding: 26px;
    backdrop-filter: blur(18px);
    box-shadow: var(--shadow);
}

.hero-mini {
    margin-top: 18px
}

.h1 {
    margin: 0 0 10px;
    font-size: 2.2rem
}

.h2 {
    margin: 0 0 10px;
    font-size: 1.35rem
}

.muted {
    color: var(--muted);
    line-height: 1.9;
    margin: 0
}

.badge-row {
    margin-top: 16px;
    display: flex;
    gap: 10px;
    flex-wrap: wrap
}

.badge {
    padding: 8px 12px;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, .16);
    background: rgba(255, 255, 255, .06);
    color: rgba(255, 255, 255, .86);
    font-size: .92rem;
}

.grid2 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 18px;
    margin-top: 18px
}

@media (max-width: 860px) {
    .grid2 {
        grid-template-columns: 1fr
    }
}

.actions {
    margin-top: 16px;
    display: flex;
    gap: 10px;
    flex-wrap: wrap
}

.btn {
    padding: 12px 16px;
    border-radius: 14px;
    border: 1px solid rgba(255, 255, 255, .18);
    background: rgba(255, 255, 255, .06);
    color: white;
    text-decoration: none;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    gap: 10px;
}

.btn.primary {
    background: white;
    color: black;
    border-color: transparent
}

.btn.ghost:hover {
    background: rgba(255, 255, 255, .09)
}

.principles {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 14px;
    margin-top: 16px
}

.pitem {
    padding: 16px;
    border-radius: 18px;
    border: 1px solid rgba(255, 255, 255, .12);
    background: rgba(255, 255, 255, .05)
}

.ptitle {
    font-weight: 900;
    margin-bottom: 6px
}

.pdesc {
    color: var(--muted);
    line-height: 1.8;
    font-size: .98rem
}

/* ===== MODAL ===== */
.modal {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, .55);
    display: none;
    align-items: center;
    justify-content: center;
    padding: 18px;
    z-index: 999;
}

.modal.show {
    display: flex
}

.modal-card {
    width: min(820px, 100%);
    border-radius: 22px;
    border: 1px solid rgba(255, 255, 255, .16);
    background: rgba(12, 16, 35, .72);
    backdrop-filter: blur(24px);
    box-shadow: 0 30px 120px rgba(0, 0, 0, .55);
    overflow: hidden;
}

.modal-head {
    padding: 16px 18px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid rgba(255, 255, 255, .10);
}

.modal-title {
    font-weight: 900
}

.iconbtn {
    background: rgba(255, 255, 255, .08);
    border: 1px solid rgba(255, 255, 255, .16);
    color: white;
    border-radius: 12px;
    padding: 8px 12px;
    cursor: pointer;
}

.modal-body {
    padding: 18px
}

.list {
    margin: 12px 0 0;
    color: rgba(255, 255, 255, .88);
    line-height: 1.9
}

.modal-foot {
    padding: 16px 18px;
    display: flex;
    gap: 10px;
    justify-content: flex-end;
    flex-wrap: wrap;
    border-top: 1px solid rgba(255, 255, 255, .10);
}

EOF
